  "devDependencies": {
    "@eslint/js": "10.0.1",
    "@types/node": "25.2.3",
    "eslint": "10.0.0",
    "eslint-plugin-prettier": "5.5.5",
    "prettier": "3.8.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.55.0"
  }
}
