{
  "name": "bro",
  "version": "0.0.1",
  "type": "module",
  "dependencies": {
    "@actions/core": "3.0.0",
    "@actions/github": "9.0.0",
    "brocolito": "6.1.1"
  },
  "scripts": {
    "prepare": "brocolito node --experimental-strip-types --no-warnings",
